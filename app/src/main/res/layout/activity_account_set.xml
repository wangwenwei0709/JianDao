<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl0"
    tools:context=".accountset.AccountSetActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/back_imag"
            android:background="@drawable/ic_back"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="账户设置"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/cl"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hui"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/tv1_set"
        android:padding="7dp"
        android:text="个人信息"/>
    <View
        android:id="@+id/view2"
        app:layout_constraintTop_toBottomOf="@id/tv1_set"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/hui"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl2"
        android:padding="7dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv2_set"
            app:layout_constraintTop_toTopOf="@id/cl2"
            app:layout_constraintLeft_toLeftOf="@id/cl2"
            app:layout_constraintBottom_toTopOf="@id/view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:paddingRight="30sp"
            android:textSize="20dp"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/cl2"
            android:layout_width="60dp"
            app:layout_constraintLeft_toRightOf="@id/tv2_set"
            app:layout_constraintBottom_toTopOf="@id/view3"
            android:background="@drawable/mine_pic"
            android:scaleType="fitXY"
            android:layout_height="60dp"
            android:padding="7dp"
            android:id="@+id/header_iv_set"
            />
        <View
            android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@id/header_iv_set"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/hui"/>
        <TextView
            android:id="@+id/tv3_set"
            app:layout_constraintTop_toTopOf="@id/view3"
            app:layout_constraintLeft_toLeftOf="@id/cl2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="30sp"
            android:textSize="20dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/view3"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv3_set"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:text="熊二狗"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv4_set"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view4"
        app:layout_constraintTop_toBottomOf="@id/cl2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hui"/>


</androidx.constraintlayout.widget.ConstraintLayout>