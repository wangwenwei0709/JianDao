<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordLogin.forgetpw.ForgetPwActivity">
    <ImageView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/close_passwordLogin"
        android:background="@drawable/ic_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/close_passwordLogin"
        android:id="@+id/tv_forget"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/close_passwordLogin"/>
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/tv_forget"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hui"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_forgetpw"
        />


    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/phone_forgetpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_forgetpw"
        android:hint="请输入验证码"
        />
    <TextView
        android:id="@+id/getCode_forgetpw"
        android:text="获取验证码"
        app:layout_constraintTop_toTopOf="@id/verification_forgetpw"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="35dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/verification_forgetpw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@id/verification_forgetpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/whait"
        android:text="下一步"
        android:layout_marginTop="15dp"
        android:id="@+id/nextbutton_forgetpw"
        android:background="@drawable/me_sign"
        />


</androidx.constraintlayout.widget.ConstraintLayout>