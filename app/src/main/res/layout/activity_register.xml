<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">
    <ImageView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/close_register"
        android:background="@drawable/ic_close"/>
    <ImageView
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/close_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_home_top_logo"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:id="@+id/phone_register"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/clean_register"
        android:background="@drawable/ic_clean"
        app:layout_constraintTop_toTopOf="@id/phone_register"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="35dp"
        app:layout_constraintBottom_toBottomOf="@id/phone_register"
        android:layout_width="30dp"
        android:layout_height="30dp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/phone_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_register"
        android:hint="请输入验证码"
        />
    <TextView
        android:id="@+id/getCode_register"
        android:text="获取验证码"
        app:layout_constraintTop_toTopOf="@id/verification_register"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="35dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/verification_register"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@id/verification_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/whait"
        android:text="下一步"
        android:layout_marginTop="15dp"
        android:id="@+id/nextbutton_register"
        android:background="@drawable/me_sign"
        />
    <TextView
        android:id="@+id/Verification_code_login"
        app:layout_constraintTop_toBottomOf="@+id/nextbutton_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/Password_to_login"
        app:layout_constraintTop_toBottomOf="@+id/nextbutton_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码登录"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/wechat_register"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/social_register"
        android:background="@drawable/ic_news_detail_share_wechat"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/qq_register" />

    <ImageView
        android:id="@+id/qq_register"
        android:background="@drawable/ic_news_detail_share_qq"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/social_register"
        app:layout_constraintLeft_toRightOf="@+id/wechat_register"
        app:layout_constraintRight_toLeftOf="@+id/weibo_register"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/weibo_register"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/social_register"
        android:background="@drawable/ic_news_detail_share_weibo"
        app:layout_constraintLeft_toRightOf="@id/qq_register"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView

        android:id="@+id/social_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="社交账号登录"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>